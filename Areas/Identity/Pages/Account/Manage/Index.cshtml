@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <label asp-for="Username" class="form-label"></label>
                <input asp-for="Username" class="form-control" placeholder="Please choose your username." disabled />
            </div>
            @* <div class="form-floating mb-3"> *@
            @*     <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Please enter your phone number."/> *@
            @*     <label asp-for="Input.PhoneNumber" class="form-label"></label> *@
            @*     <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span> *@
            @* </div> *@

            @* BEGIN: ApplicationUser custom fields*@
            @if (!string.IsNullOrEmpty(Model.Input.ImageFilename)){
                <div class="mb-3">
                    @* <img src="~/profile_img/@Model.Input.ImageFilename" class="profile-thumbnail" /> *@
                    <img src="~/profile_img/@Model.Input.ImageFilename" alt="Profile image" class="rounded-circle" style="max-width: 150px; height: 150px; object-fit: cover;" />
                </div>
            }
            <div class="mb-3">
                <label asp-for="Input.ImageFile" class="form-label"></label>
                <input asp-for="Input.ImageFile" class="form-control" />
                <span asp-validation-for="Input.ImageFile" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Input.Name" class="form-label"></label>
                <input asp-for="Input.Name" class="form-control" />
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Input.Bio" class="form-label"></label>
                <textarea asp-for="Input.Bio" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Input.Bio" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Input.Location" class="form-label"></label>
                <input asp-for="Input.Location" class="form-control" />
                <span asp-validation-for="Input.Location" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input asp-for="Input.IsForHire" class="form-check-input" /> For hire?
                <span asp-validation-for="Input.IsForHire" class="text-danger"></span>
            </div>
            @* END: ApplicationUser custom fields*@

            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
