@model AquariumForum.Models.Discussion

@{
    ViewData["Title"] = "Get Discussion";
    string imageUrl = Url.Content("/images/" + Model.ImageFilename);
}

<div class="w-50 mx-auto">
    <img src="@imageUrl" class="img-fluid" alt="@Model.Title" />
</div>

